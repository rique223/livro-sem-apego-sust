

.login-social
    display flex
    justify-content space-between
    flex-wrap wrap
    color purplishGrey
    font 300 16px 'Museo'
    width 100%

    &.-border
        padding-top 20px
        margin-top 30px
        border-top 1px solid lightGrey

    > .subtitle
        margin-bottom 20px
        text-align left
        font-size 16px
        font-weight 300
        width 100%

    > .or
        margin 30px 0
        position relative
        display flex
        justify-content space-between
        align-items center
        width 100%

        &:after
        &:before
            border-top 1px solid lightgrey
            content ''
            display inline-block
            width 44%


    > .item
        border-radius 8px
        cursor pointer
        height 40px
        display flex
        justify-content center
        align-items center
        width 45%
        
        &.-fb
            background #3b5998

        &.-gg
            background #dd4b39
        
        > svg 
            height 25px
            width 25px
