header.header-static: .wrap

    a.logo( href = '' ): img( src = 'img/livro-sem-apego-logo.png' alt = 'Livro sem Apego - Logo' )
    btn-my-account
    nav( class = 'menu-nav -static' ): +menu()

header.header-fixed: .wrap

    nav( class = 'menu-nav -fixed' ): +menu()
    a( href = '' ): svg: use( xlink:href="img/svg.svg#icon-livro-sem-apego" )
    button.icon: span
    btn-my-account

.menu-mobile: .items
    button.icon: svg.close: use( xlink:href="img/svg.svg#icon-close" )
    nav: +menu()
    btn-my-account




