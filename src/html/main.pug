doctype
html( lang = 'pt-BR' )

    block vars

    - version = '0.2.3'

    head
        meta( charset = 'UTF-8' )
        base( href = '/' )
        meta( name = 'viewport' content = 'width=device-width, initial-scale=1' )
        meta( name = "theme-color" content = "#625673" )
        meta( name = 'description' content=description )

        if canonical
            link( rel = 'canonical' href=canonical )

        link( rel = "stylesheet" href = 'css/main.css?v='+version )
        link( rel = 'icon' href = 'img/favicon.ico' )

        if !book_internal
            meta( property="og:title" content="Livro sem Apego" )
            meta( property="og:url" content="http://www.livrosemapego.com.br" )
            meta( property="og:description" content=" Livro sem Apego é um site de doação de livros, sem fins lucrativos. A ideia do projeto surgiu através de uma necessidade de ajudar alguém que esteja precisando de um livro, mas não tem condições de comprá-lo ou simplesmente gostaria de ganhá-lo." )
            meta( property="og:image" content="http://www.livrosemapego.com.br/img/postlink.jpg" )
            meta( property="og:image:type" content="image/jpeg" )
        
        meta( property="og:image:width" content="470" )
        meta( property="og:image:height" content="246" )
        
        if title
            - pipe = '-'
            
        title #{title} #{pipe} Livro sem Apego

        if recaptcha
            script( src="https://www.google.com/recaptcha/api.js?onload=vueRecaptchaApiLoaded&render=explicit" async defer )


        script.
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-100491623-1', 'auto');
            ga('send', 'pageview');


    body( data-js=bodyjs )
        
        mixin menu() 
            a.item( href = 'livros' ) Livros
            a.item( href = 'https://www.facebook.com/livrosemapego/posts/1263969707099763' target = '_blank' ) FAQ
            a.item( href = 'contato' ) Contato 
            
        .container
        
            include includes/header

            block content

            include includes/footer


        script.
            window.APIUrl = ( window.location.origin.indexOf('localhost') ? 'http://livrosemapego.com.br' : window.location.origin ) + '/api/v1';

        script( src='js/build.js?v='+version ) 
        script( src="js/app.js" )

